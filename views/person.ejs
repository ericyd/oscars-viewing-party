<!DOCTYPE html>
<html>
  <head>
    <title><%= person %>'s predictions</title>
    <meta name="viewport" content="width=device-width,minimum-scale=1" />
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:ital,wght@0,700;1,700&display=swap" rel="stylesheet"> -->
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= person %>'s predictions</h1>

    (👑 = winner, ✅ = correct prediction, ❌ = wrong prediction, ⭕️ = predicted but no winner yet)

    <% for (const item of list) { %>
      <h2 class="meta-category"><%= item.metaCategory %></h2>
      <% for (const c of item.categories) { %>
        <h3><%= c.category %></h3>
        <% for (const n of c.nominees) { %>
          <div class="flex margin-bottom">
            <div class="width-2 flex items-center">
              <!-- <%= n.prediction_nominee_id %>, <%= n.winning_nominee_id %>, <%= n.nominee_id %> -->
              <% if (n.winning_nominee_id) { %>
                <% if (n.winning_nominee_id === n.nominee_id) { %>
                  👑
                <% } %>
                <% if (n.winning_nominee_id === n.prediction_nominee_id) { %>
                  ✅
                <% } else if (n.prediction_nominee_id === n.nominee_id) { %>
                  ❌
                <% } %>
              <% } else { %>
                <% if (n.prediction_nominee_id) { %>
                  ⭕️
                <% } %>
              <% } %>
            </div>
            <div class="flex column max-width-80">
              <%= n.nominee %>
              <strong class="block small"><%= n.artwork %></strong>
            </div>
          </div>
        <% } %>
      <% } %>
    <% } %>
  </body>
</html>
