<!DOCTYPE html>
<html>
  <head>
    <title>Make predictions for Oscars {{ year }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>{{ person }}'s predictions</h1>
    
    {{#list}}
      <h2>{{ metaCategory }}</h2>
      {{ category }}
      {{ nominee }}
      {{#categories}}
        <h3>{{ category }}</h3>
        {{#nominees}}
          <label>
            {{category_id}} {{nominee_id}}
            <input type="radio" name="{{category_id}}" value="{{nominee_id}}"> {{ nominee }}, for {{ artwork }}
          </label>
        {{/nominees}}
      {{/categories}}
    {{/list}}

  </body>
</html>
